<launch>

  <arg name="launch_driver" default="true" />
  <arg name="sensor_model" />

  <group ns="sensing">

    <!-- LiDAR Driver -->
    <include file="$(find sensing_launch)/launch/$(arg sensor_model)/lidar.launch">
      <arg name="launch_driver" value="$(arg launch_driver)" />
    </include>

    <!-- Camera Driver -->
    <include file="$(find sensing_launch)/launch/$(arg sensor_model)/camera.launch">
      <arg name="launch_driver" value="$(arg launch_driver)" />
    </include>

    <!-- IMU Driver -->
    <include file="$(find sensing_launch)/launch/$(arg sensor_model)/imu.launch">
      <arg name="launch_driver" value="$(arg launch_driver)" />
    </include>

    <!-- GNSS Driver -->
    <include file="$(find sensing_launch)/launch/$(arg sensor_model)/gnss.launch">
      <arg name="launch_driver" value="$(arg launch_driver)" />
    </include>

  </group>

</launch>
