<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="sensor_kit_macro" params="parent x y z roll pitch yaw">
    <xacro:include filename="$(find velodyne_description)/urdf/HDL-32E.urdf.xacro"/>
    <xacro:include filename="$(find velodyne_description)/urdf/VLP-16.urdf.xacro"/>
    <xacro:include filename="$(find vls_description)/urdf/VLS-128.urdf.xacro"/>
    <xacro:include filename="$(find camera_description)/urdf/monocular_camera.xacro"/>
    <xacro:include filename="$(find imu_description)/urdf/imu.xacro"/>

    <!-- <xacro:property name="pi" value="3.1415926835897931"/> -->
    <xacro:arg name="gpu" default="false"/>
    <xacro:arg name="config_dir" default="$(find aip_xx1_description)/config"/>

    <xacro:property name="sensor_kit_base_link" default="sensor_kit_base_link"/>

    <joint name="${sensor_kit_base_link}_joint" type="fixed">
      <origin rpy="${roll} ${pitch} ${yaw}" xyz="${x} ${y} ${z}"/>
      <parent link="${parent}"/>
      <child link="${sensor_kit_base_link}"/>
    </joint>
    <link name="${sensor_kit_base_link}">
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </link>

    <!-- sensor -->
    <xacro:property name="calibration" value="${load_yaml('$(arg config_dir)/sensor_kit_calibration.yaml')}"/>
    <!-- lidar -->
    <xacro:VLS-128 parent="sensor_kit_base_link" name="velodyne_top" topic="/points_raw" hz="10" samples="220" gpu="$(arg gpu)">
      <origin xyz="${calibration['sensor_kit_base_link2velodyne_top_base_link']['x']} ${calibration['sensor_kit_base_link2velodyne_top_base_link']['y']} ${calibration['sensor_kit_base_link2velodyne_top_base_link']['z']}" rpy="${calibration['sensor_kit_base_link2velodyne_top_base_link']['roll']} ${calibration['sensor_kit_base_link2velodyne_top_base_link']['pitch']} ${calibration['sensor_kit_base_link2velodyne_top_base_link']['yaw']}" />
    </xacro:VLS-128>
    <xacro:VLP-16 parent="sensor_kit_base_link" name="velodyne_left" topic="/points_raw" hz="10" samples="220" gpu="$(arg gpu)">
      <origin xyz="${calibration['sensor_kit_base_link2velodyne_left_base_link']['x']} ${calibration['sensor_kit_base_link2velodyne_left_base_link']['y']} ${calibration['sensor_kit_base_link2velodyne_left_base_link']['z']}" rpy="${calibration['sensor_kit_base_link2velodyne_left_base_link']['roll']} ${calibration['sensor_kit_base_link2velodyne_left_base_link']['pitch']} ${calibration['sensor_kit_base_link2velodyne_left_base_link']['yaw']}" />
    </xacro:VLP-16>
    <xacro:VLP-16 parent="sensor_kit_base_link" name="velodyne_right" topic="/points_raw" hz="10" samples="220" gpu="$(arg gpu)">
      <origin xyz="${calibration['sensor_kit_base_link2velodyne_right_base_link']['x']} ${calibration['sensor_kit_base_link2velodyne_right_base_link']['y']} ${calibration['sensor_kit_base_link2velodyne_right_base_link']['z']}" rpy="${calibration['sensor_kit_base_link2velodyne_right_base_link']['roll']} ${calibration['sensor_kit_base_link2velodyne_right_base_link']['pitch']} ${calibration['sensor_kit_base_link2velodyne_right_base_link']['yaw']}" />
    </xacro:VLP-16>
    <!-- camera -->
    <xacro:monocular_camera_macro name="traffic_light_right_camera/camera" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2traffic_light_right_camera']['x']}" y="${calibration['sensor_kit_base_link2traffic_light_right_camera']['y']}" z="${calibration['sensor_kit_base_link2traffic_light_right_camera']['z']}" roll="${calibration['sensor_kit_base_link2traffic_light_right_camera']['roll']}" pitch="${calibration['sensor_kit_base_link2traffic_light_right_camera']['pitch']}" yaw="${calibration['sensor_kit_base_link2traffic_light_right_camera']['yaw']}" fps="30" width="800" height="400" fov="1.3"/>
    <xacro:monocular_camera_macro name="traffic_light_left_camera/camera" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2traffic_light_left_camera']['x']}" y="${calibration['sensor_kit_base_link2traffic_light_left_camera']['y']}" z="${calibration['sensor_kit_base_link2traffic_light_left_camera']['z']}" roll="${calibration['sensor_kit_base_link2traffic_light_left_camera']['roll']}" pitch="${calibration['sensor_kit_base_link2traffic_light_left_camera']['pitch']}" yaw="${calibration['sensor_kit_base_link2traffic_light_left_camera']['yaw']}" fps="30" width="800" height="400" fov="1.3"/>
    <xacro:monocular_camera_macro name="camera0/camera" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2camera0']['x']}" y="${calibration['sensor_kit_base_link2camera0']['y']}" z="${calibration['sensor_kit_base_link2camera0']['z']}" roll="${calibration['sensor_kit_base_link2camera0']['roll']}" pitch="${calibration['sensor_kit_base_link2camera0']['pitch']}" yaw="${calibration['sensor_kit_base_link2camera0']['yaw']}" fps="30" width="800" height="400" fov="1.3"/>
    <xacro:monocular_camera_macro name="camera1/camera" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2camera1']['x']}" y="${calibration['sensor_kit_base_link2camera1']['y']}" z="${calibration['sensor_kit_base_link2camera1']['z']}" roll="${calibration['sensor_kit_base_link2camera1']['roll']}" pitch="${calibration['sensor_kit_base_link2camera1']['pitch']}" yaw="${calibration['sensor_kit_base_link2camera1']['yaw']}" fps="30" width="800" height="400" fov="1.3"/>
    <xacro:monocular_camera_macro name="camera2/camera" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2camera2']['x']}" y="${calibration['sensor_kit_base_link2camera2']['y']}" z="${calibration['sensor_kit_base_link2camera2']['z']}" roll="${calibration['sensor_kit_base_link2camera2']['roll']}" pitch="${calibration['sensor_kit_base_link2camera2']['pitch']}" yaw="${calibration['sensor_kit_base_link2camera2']['yaw']}" fps="30" width="800" height="400" fov="1.3"/>
    <xacro:monocular_camera_macro name="camera3/camera" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2camera3']['x']}" y="${calibration['sensor_kit_base_link2camera3']['y']}" z="${calibration['sensor_kit_base_link2camera3']['z']}" roll="${calibration['sensor_kit_base_link2camera3']['roll']}" pitch="${calibration['sensor_kit_base_link2camera3']['pitch']}" yaw="${calibration['sensor_kit_base_link2camera3']['yaw']}" fps="30" width="800" height="400" fov="1.3"/>
    <xacro:monocular_camera_macro name="camera4/camera" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2camera4']['x']}" y="${calibration['sensor_kit_base_link2camera4']['y']}" z="${calibration['sensor_kit_base_link2camera4']['z']}" roll="${calibration['sensor_kit_base_link2camera4']['roll']}" pitch="${calibration['sensor_kit_base_link2camera4']['pitch']}" yaw="${calibration['sensor_kit_base_link2camera4']['yaw']}" fps="30" width="800" height="400" fov="1.3"/>
    <xacro:monocular_camera_macro name="camera5/camera" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2camera5']['x']}" y="${calibration['sensor_kit_base_link2camera5']['y']}" z="${calibration['sensor_kit_base_link2camera5']['z']}" roll="${calibration['sensor_kit_base_link2camera5']['roll']}" pitch="${calibration['sensor_kit_base_link2camera5']['pitch']}" yaw="${calibration['sensor_kit_base_link2camera5']['yaw']}" fps="30" width="800" height="400" fov="1.3"/>
    <!-- gnss -->
    <xacro:imu_macro name="gnss" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2gnss']['x']}" y="${calibration['sensor_kit_base_link2gnss']['y']}" z="${calibration['sensor_kit_base_link2gnss']['z']}" roll="${calibration['sensor_kit_base_link2gnss']['roll']}" pitch="${calibration['sensor_kit_base_link2gnss']['pitch']}" yaw="${calibration['sensor_kit_base_link2gnss']['yaw']}" fps="100" />
    <!-- imu -->
    <xacro:imu_macro name="tamagawa/imu" parent="sensor_kit_base_link" namespace="" x="${calibration['sensor_kit_base_link2imu_tamagawa']['x']}" y="${calibration['sensor_kit_base_link2imu_tamagawa']['y']}" z="${calibration['sensor_kit_base_link2imu_tamagawa']['z']}" roll="${calibration['sensor_kit_base_link2imu_tamagawa']['roll']}" pitch="${calibration['sensor_kit_base_link2imu_tamagawa']['pitch']}" yaw="${calibration['sensor_kit_base_link2imu_tamagawa']['yaw']}" fps="100" />
  </xacro:macro>

</robot>
